<div class="container">
  <h5>&nbsp;</h5>
  <h5>Eat A Burger!</h5>
  <h6>High Cholesterol is overrated!</h6>

  <form class="create-update-form" action="/" method="POST">
    <div class="form-group">
      <label for="ca">Burger Name</label>
      <input type="text" id="burger" name="burger_name">
    </div>
    
    <button type="submit">Add Burger</button>
  </form>

  <div class="row">

    <div class="col s4 offset-s2" id="newBurger">
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              <div class="card horizontal">    
                <div class="card-stacked">
                  <div class="card-content">
                    {{this.burger_name}}
                  </div>
                <div class="card-action">
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                      <input type="hidden" name="devoured" value="true">
                      <button type="submit">Eat!</button>
                    </form>
                </div>
              </div>
            </div>
            
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col s4" id="devouredBurger">
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              <div class="card horizontal">    
                <div class="card-stacked">
                  <div class="card-content">
                    {{this.burger_name}}
                  </div>
                <div class="card-action">
                    <h6>Burger was devoured!</h6>

                </div>
              </div>
            </div>
            
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

      
        
</div>

